@model CommentVM

@{

}

<form method="post" class="main-comment-form__form" asp-controller="Home" asp-action="Comment">
    <input asp-for="PostId" type="hidden" />
    <input asp-for="MainCommentId" type="hidden" />

    <div class="form-group">
        <textarea type="text" rows="3" cols="100" asp-for="Message"
                  class="main-comment-text" placeholder="Add a sub comment..."></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus form-group-add__icon"></i>
            <span class="form-group-add__span">Add Comment</span>
        </button>
    </div>
</form>